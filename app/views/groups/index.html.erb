<div class="flex flex-col justify-center h-full">
  <div class="bg-main flex justify-between text-white items-center h-12">
    <%= button_to "<", destroy_user_session_path, method: :delete, class: 'text-xl mx-2'  %>
    <h1 class="font-bold">GROUPS</h1>
    <%= link_to ">", group_entities_path(Entity.last), class: 'text-xl mx-2'  %>
  </div>
  <div class="flex-1">
    <div class="flex flex-col gap-1">
      <% @groups.each do |group| %>
        <%= link_to group_entities_path(group), class: "grid grid-cols-4 gap-2 bg-white p-2 mb-2 h-24 md:h-full" do %>
            <img src="<%= group.icon %>" class="col-span-1 max-h-24">
            <div class="col-span-3 flex items-center justify-between">
                <p class="text-text-25"><%= group.name %></p>
                <p class="text-text-50 font-bold">$<%= group.total %></p>
            </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="p-5 bg-secondary text-center">
    <%= link_to 'Add group', new_group_path, class: 'border rounded px-5 py-3 block w-full text-white' %>
  </div>
</div>