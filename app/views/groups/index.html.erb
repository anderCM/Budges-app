<div class="flex flex-col gap-1">
  <% @groups.each do |group| %>
    <%= link_to group_entities_path(group), class: "grid grid-cols-4 gap-2 bg-white p-2 mx-3 mt-2 h-24 md:h-full" do %>
        <img src="<%= group.icon %>" class="col-span-1 max-h-24">
        <div class="col-span-3 flex items-center justify-between">
            <p class="text-text-25"><%= group.name %></p>
            <p>$ 0</p>
        </div>
    <% end %>
  <% end %>
  <div class="container p-5 bg-secondary fixed bottom-0 text-center">
    <%= link_to 'Add group', new_group_path, class: 'border rounded px-5 py-3 block w-full text-white' %>
  </div>
</div>