<div class="flex flex-col justify-center h-full">
  <div class="flex justify-between bg-white p-2 mt-2">
    <p class="text-text-25">Total:</p>
    <p class="text-text-50 font-bold">$<%= @total %></p>
  </div>
  <div class="flex-1">
    <div class="flex flex-col gap-1">
      <% @entities.each do |entity| %>
          <div class="bg-white p-2 mx-1 mt-2 flex items-center justify-between">
              <p class="text-text-25"><%= entity.name %></p>
              <p class="text-text-50 font-bold">$<%= entity.amount %></p>
          </div>
      <% end %>
    </div>
  </div>
  <div class="p-5 bg-secondary text-center">
    <%= link_to 'Add entity', new_group_entity_path(@group_id), class: 'border rounded px-5 py-2 block w-full text-white' %>
  </div>
</div>