<div class="container h-screen bg-white px-4">
  <h2 class="text-center font-proxima-bold text-2xl">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'font-proxima-light text-gray-800 text-sm font-bold leading-tight tracking-normal' %>
      <%= f.email_field :email, autofocus: true, class: 'font-proxima-light mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-main font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'font-proxima-light text-gray-800 text-sm font-bold leading-tight tracking-normal' %>
      <%= f.password_field :password, class: 'font-proxima-light mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-main font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field my-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'font-proxima-light text-sm leading-tight tracking-normal' %>
      </div>
    <% end %>

    <div class="actions text-center">
      <%= f.submit "Log in", class:"mb-3 font-proxima-light focus:outline-none focus:ring-2 focus:ring-offset-2  focus:ring-blue-500 w-full bg-main transition duration-150 text-white ease-in-out hover:border-blue-500 hover:bg-blue-500 border rounded px-8 py-2 text-sm cursor-pointer"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>