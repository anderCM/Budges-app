<div class="container h-screen bg-white px-4">
  <h2 class="text-center font-proxima-bold text-2xl">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, class: 'font-proxima-light text-gray-800 text-sm font-bold leading-tight tracking-normal' %>
      <%= f.text_field :name, class: 'font-proxima-light mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-main font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :email, class: 'font-proxima-light text-gray-800 text-sm font-bold leading-tight tracking-normal' %>
      <%= f.email_field :email, class: 'font-proxima-light mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-main font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'font-proxima-light text-gray-800 text-sm font-bold leading-tight tracking-normal' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, class: 'font-proxima-light mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-main font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'font-proxima-light text-gray-800 text-sm font-bold leading-tight tracking-normal' %>
      <%= f.password_field :password_confirmation, class: 'font-proxima-light mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-main font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"my-3 font-proxima-light focus:outline-none focus:ring-2 focus:ring-offset-2  focus:ring-blue-500 w-full bg-secondary transition duration-150 text-white ease-in-out hover:border-blue-500 hover:bg-lime-500 border rounded px-8 py-2 text-sm cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>