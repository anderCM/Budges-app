<div class="container h-screen bg-white px-4">
  <h2 class="text-center font-proxima-bold text-2xl">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'font-proxima-light text-gray-800 text-sm font-bold leading-tight tracking-normal' %><br />
      <%= f.email_field :email, class: 'font-proxima-light mb-5 mt-2 text-gray-600 focus:outline-none focus:border focus:border-main font-normal w-full h-10 flex items-center pl-3 text-sm border-gray-300 rounded border', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions my-3">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>